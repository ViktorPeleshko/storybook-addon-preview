{
    "compilerOptions": {
        "outDir": "./dist",
        "esModuleInterop": false,
        "sourceMap": true,
        "module": "es2015",
        "target": "es3",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "./dist",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": [
            "es2015",
            "dom"
        ],
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}